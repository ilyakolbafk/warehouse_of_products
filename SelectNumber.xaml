<Window x:Class="_1C.SelectNumber"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SelectNumber" MaxHeight="200" MinWidth="300" MinHeight="200" MaxWidth="300">
    <Grid>
        <Label Content="Введите значение:" HorizontalAlignment="Center" Height="30"
               Margin="0,20,0,0"  VerticalAlignment="Top" Width="150"
               HorizontalContentAlignment="Center"/>
        <TextBox x:Name="number" HorizontalAlignment="Center" Height="20"
                 TextWrapping="Wrap" VerticalAlignment="Center" Width="200" 
                 TextChanged="Number_OnTextChanged"/>
        <Button Content="Создать отчет" HorizontalAlignment="Center" 
                Margin="0,0,0,20" VerticalAlignment="Bottom" Width="150"
                IsDefault="True" Click="Accept_Click"/>
    </Grid>
</Window>
